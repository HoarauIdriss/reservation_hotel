        <script>
            $(function(){
                stars();
            });
            function stars(){
                $(".star").each(function(){
                    var stars = $(this).data("etoile");
                    let affiche_nbetoile;
                    affiche_nbetoile = "";
                    console.log(stars);
                    for (let i=0; i<stars; i++){
                        console.log("dans la boucle");
                        affiche_nbetoile +="<i class='fas fa-star'></i>";
                        $(this).html(affiche_nbetoile);
                    }
                })
            }
        </script>
